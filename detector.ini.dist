
[global]
graceframes=10

[doorbot.cameras.rtsp]
enable=true
url=rtsp://user:password@camera.example.com/stream
fps=5.0
reportframes=100

[doorbot.detectors.motion]
enable=true
threshold=50
varthreshold=200
blur=5
minw=20
minh=20
ignoreedges=false

[doorbot.capturers.video]
enable=true
path=/srv/snapshots
fps=5.0
fourcc=mp4v
container=mp4

[doorbot.capturers.photo]
enable=false
path=/srv/snapshots

[doorbot.observers.framebuffer]
enable=false
path=/dev/fb0
fps=5.0
reportframes=100
width=480
height=320
overlay=<time>
overlaycoords=10,20
overlayfont=HERSHEY_SIMPLEX

[doorbot.observers.reserver]
enable=true
listen=127.0.0.1
port=8888
fps=5.0
reportframes=100
overlay=<time>
overlaycoords=10,20

[doorbot.overlays.timestamp]
enable=true

[doorbot.overlays.weather]
enable=false
url=http://weather.example.com/current.json
refresh=300
format=<outTemp> <humidity>, wind <windSpeed>, rain <rainRate>

[doorbot.notifiers.mqtt]
enable=false
url=mqtt://mqtt.example.com:1883/topic
logger=false
snapshots=true
snapsretain=true
ca=
uid=
snapsize=320,240
overlaycoords=10,30
overlayscale=0.75
overlaythickness=2
overlaylineheight=25
winautohide=false
winautohidedelay=2000

